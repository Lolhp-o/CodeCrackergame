<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.TextField?>

<VBox alignment="CENTER" spacing="20.0" xmlns:fx="http://javafx.com/fxml" fx:controller="com.example.demo.HelloController">
  <padding>
    <Insets bottom="20.0" left="20.0" right="20.0" top="20.0"/>
  </padding>

  <!-- Метка для отображения слова -->
  <Label fx:id="codeWordLabel" text="CODE WORD: "/>

  <!-- Панель для отображения букв -->
  <HBox fx:id="gridPanel"/>

  <!-- Поле для ввода -->
  <TextField fx:id="inputField" onAction="#checkWord" promptText="Введите слово"/>

  <!-- Кнопка для начала игры -->
  <Button text="Start New Game" onAction="#onStartButtonClick"/>
</VBox>
